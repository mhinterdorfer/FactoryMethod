<Page x:Class="AdminApplication.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminApplication"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="900"
      Background="White"
      Title="HomePage">

    <Grid>
        <Button x:Name="btnCreateRealEstate" Content="Create Real Estate" HorizontalAlignment="Left" Margin="200,186,0,0" VerticalAlignment="Top" Width="200" Height="35" Click="btnCreateRealEstate_Click" FontSize="20"/>
        <Button x:Name="btnShowRealEstates" Content="Show Real Estates" HorizontalAlignment="Right" Margin="0,186,200,0" VerticalAlignment="Top" Width="200" Height="35" Click="BtnShowRealEstates_Click" FontSize="20"/>
        <Label x:Name="lblTitle" Content="Welcome to the Real Estate Admin Application!" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="700" FontSize="25" HorizontalContentAlignment="Center"/>
    </Grid>
</Page>
